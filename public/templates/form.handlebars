<div class="" style="padding: 15px;background-color: #efefef;border-radius: 5px">
    <h3>NUEVO ARTÍCULO</h3>

    <div class="form-group">
        <label>Nombre:</label>
        <input type="text" id="title" name="title" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Precio:</label>
        <input type="number" id="price" name="price" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Imagen Url:</label>

        <select name="thumbnail" id="thumbnail" required class="form-control">
            <option selected disabled value="">Seleccionar imagen</option>
            <option
                    value="https://cdn3.iconfinder.com/data/icons/education-209/64/plane-paper-toy-science-school-256.png">
                avión</option>
            <option
                    value="https://cdn3.iconfinder.com/data/icons/education-209/64/globe-earth-geograhy-planet-school-128.png">
                Globo terráqueo</option>
            <option
                    value="https://cdn3.iconfinder.com/data/icons/education-209/64/calculator-math-tool-school-128.png">
                Calculadora</option>
            <option
                    value="https://cdn3.iconfinder.com/data/icons/education-209/64/ruler-triangle-stationary-school-256.png">
                Reglas</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" id="botonEnviar" class="btn btn-md btn-success btn-block">Enviar</button>
        <button id="botonEliminarProductos" class="btn btn-md btn-danger btn-block">Eliminar todos los Productos</button>
    </div>


</div>
